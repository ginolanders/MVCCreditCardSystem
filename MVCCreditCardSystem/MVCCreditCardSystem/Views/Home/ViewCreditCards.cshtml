@model IEnumerable<MVCCreditCardSystem.Models.CreditCardModel>

@{
    ViewBag.Title = "ViewCreditCards";
}

<h2>Credit Card List</h2>

<p>
    @Html.ActionLink("Create New", "CaptureCreditCard")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CardNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardCVV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardExpiryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardCountry)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CardNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardCVV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardExpiryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardCountry)
        </td>
    </tr>
}

</table>
